<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/header1">

                    <TextView
                        android:id="@+id/tv_akun_alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:shadowColor="#000000"
                        android:shadowDy="1"
                        android:shadowRadius="4"
                        android:textColor="@color/grey"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtAkunNama" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgAkunFoto"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/employeeicon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtAkunNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="4"
                        android:text="Nama"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgAkunFoto" />

                    <ImageButton
                        android:id="@+id/ib_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round_blue"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:layout_constraintEnd_toEndOf="@+id/imgAkunFoto"
                        app:layout_constraintTop_toTopOf="@+id/imgAkunFoto" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_akun_logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round_orange"
                        android:drawableLeft="@drawable/baseline_logout_24"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Keluar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_penjualan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:text=" Penjualan\nHari Ini "
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btn_akun_penjualan2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView20" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_penjualan2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:text="Penjualan\nProduk"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btn_akun_rekap_transaksi"
                app:layout_constraintStart_toEndOf="@+id/btn_akun_penjualan"
                app:layout_constraintTop_toBottomOf="@+id/cardView20" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_rekap_transaksi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:text="Transaksi\nPenjualan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_akun_penjualan2"
                app:layout_constraintTop_toBottomOf="@+id/cardView20" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_rekap_pendapatan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:text="Omzet\nPenjualan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btn_akun_jam_operasional"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_penjualan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_jam_operasional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:text="Jam\nOperasional"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_akun_rekap_pendapatan"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_penjualan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_penukaran_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:text="Penukaran\nPoint"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btn_akun_point_member"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_jam_operasional" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_point_member"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:text="Point\nMember"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btn_akun_referral"
                app:layout_constraintStart_toEndOf="@+id/btn_akun_penukaran_point"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_jam_operasional" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_referral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_blue"
                android:fontFamily="@font/roboto"
                android:text="Retail"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_akun_point_member"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_jam_operasional" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_akun_referral2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_orange"
                android:fontFamily="@font/roboto"
                android:text="Retail"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_penukaran_point" />

            <TextView
                android:id="@+id/tv_akun_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_akun_point_member" />


            <!--                app:layout_constraintTop_toBottomOf="@+id/cardView7" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>